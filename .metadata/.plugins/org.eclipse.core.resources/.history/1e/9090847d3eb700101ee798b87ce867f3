//DO NOT MODIFY  TEST|ZMKORN|||||||1






HW1(DATE,CID)
	// HW1^ZPROCN(61906,2280056100)
	
	type Number CD,d,s,t,c,g,ti
	type String n
	set n = ""
	set ti=0
	set s = 0
 
	
	type ResultSet rst=Db.select("TJD,DATETIME,CID,GRP,BRCD,ITC1,TOT,TYPE,CLS","DTJ","CID=:CID AND TJD=:DATE")
	while rst.next() do { 
		set CD = rst.getCol(3)
		set d = rst.getCol(1)
		set s = s+rst.getCol(7)
		set t = rst.getCol(8)
		set c = rst.getCol(9)
		set g = rst.getCol(4)
		set ti = ti+1
		}
		
	type ResultSet rs=Db.select("ACCTNAME","ACN","CID=:CID")
		while rs.next() do { 
		set n = rs.getCol(1)
		
		}
		
	write "Date "_d,!
	write	"Account : ",CD," - ",n,!
	write	"Class,GRP,TYPE :",c,",",g,",",t,!
	write	"Summary Amount :",s,!
	write	"Number of Transaction in DATE : ",ti
	quit
	
	/*
Date : YEARMMDD
Account : XXXXXXXX - NAME 
Class,GRP,TYPE :
Summary Amount : XXXXX.XXXX
Number of Transaction in DATE : XXX



	